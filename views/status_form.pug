extends layout

block content
    h1=title

    form(method='POST' action='')
        div.form-group
            label(for='numberTable') Number Table:
            select#numberTable.form-control(type='Select' placeholder='1-5' name='tableId' required='true')
                for table in tables
                    option(value=table._id) #{table.numberTable} (number of seats: #{table.numberOfSeats})

            label(for='status') When:
            select#status.form-control(type='Select' placeholder='before or after lunch' name='time' required='true')
                option(value='Busy before lunch') before lunch
                option(value='Busy after lunch') after lunch

            label(for='start') Date start:
            input#start.form-control(type='Date' placeholder='date' name='start' required='true')

        button.btn.btn-primary(type='submit') Submit

    if errors
        ul
            for error in errors
                li!= error.msg
    if custom_err
        h1=custom_err